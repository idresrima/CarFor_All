<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#072147"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="418dp"
        android:layout_height="437dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <View
            android:id="@+id/join_view"
            android:layout_width="203dp"
            android:layout_height="185dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#8BB8B8"
            app:layout_column="0"
            app:layout_row="0" />

        <View
            android:id="@+id/carrepair_view"
            android:layout_width="197dp"
            android:layout_height="209dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#9BCACA"
            app:layout_column="1"
            app:layout_row="1" />

        <View
            android:id="@+id/askcar_view"
            android:layout_width="201dp"
            android:layout_height="207dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#9FC6BD"
            app:layout_column="0"
            app:layout_row="1" />

        <View
            android:id="@+id/addcar_view"
            android:layout_width="200dp"
            android:layout_height="185dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#9BB8B1"
            app:layout_column="1"
            app:layout_row="0" />

        <LinearLayout
            android:id="@+id/addcar_vlayout"
            android:layout_width="197dp"
            android:layout_height="183dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            app:layout_column="1"
            app:layout_row="0">

            <ImageView
                android:id="@+id/addcar_icon"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/add_car_icon" />

            <Button
                android:id="@+id/addcar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/add_car_btn_background"
                android:text="Button"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/askcar_vlayout"
            android:layout_width="200dp"
            android:layout_height="207dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_row="1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/ask_car_icon" />

            <Button
                android:id="@+id/askcar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ask_car_btn_background"
                android:text="Button"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/carrepair_vlayout"
            android:layout_width="197dp"
            android:layout_height="211dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            app:layout_column="1"
            app:layout_row="1">

            <ImageView
                android:id="@+id/carrepair_icon"
                android:layout_width="192dp"
                android:layout_height="96dp"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/car_repair_icon" />

            <Button
                android:id="@+id/carrepair_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/repair_car_background"
                android:text="Button"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/join_vlayout"
            android:layout_width="190dp"
            android:layout_height="189dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_marginBaseline="5dp"
            app:layout_row="0">

            <ImageView
                android:id="@+id/join_icon"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/join_icon" />

            <Button
                android:id="@+id/join_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/join_btn_background"
                android:text="Button"
                app:backgroundTint="@null" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="178dp"
        android:layout_height="128dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/almendra_sc"
        android:text="@string/car"
        android:textColor="@color/white"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/for_txt"
        android:layout_width="155dp"
        android:layout_height="108dp"
        android:layout_marginTop="188dp"
        android:fontFamily="@font/almendra_sc"
        android:text="@string/fortxt"
        android:textColor="@color/white"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/all_txt"
        android:layout_width="150dp"
        android:layout_height="121dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/almendra_sc"
        android:text="@string/all"
        android:textColor="@color/white"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="182dp"
        android:layout_height="123dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/car5" />

</androidx.constraintlayout.widget.ConstraintLayout>