<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#072147"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="418dp"
        android:layout_height="437dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_join"
            android:layout_width="200dp"
            android:layout_height="188dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#8BB8B8"
            app:layout_column="0"
            app:layout_row="0" >

            <LinearLayout
                android:id="@+id/join_vlayout"
                android:layout_width="190dp"
                android:layout_height="189dp"
                android:layout_margin="5dp"
                android:orientation="vertical"
                app:layout_marginBaseline="5dp">

                <ImageView
                    android:id="@+id/join_icon"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginBottom="25dp"
                    app:srcCompat="@drawable/join_icon" />

                <Button
                    android:id="@+id/join_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/join_btn_background"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/join"
                    android:textColor="#072147"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_addcar"
            android:layout_width="196dp"
            android:layout_height="185dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#9BB8B1"
            app:layout_column="1"
            app:layout_row="0" >

            <LinearLayout
                android:id="@+id/addcar_vlayout"
                android:layout_width="186dp"
                android:layout_height="183dp"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/addcar_icon"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:layout_marginBottom="25dp"
                    app:srcCompat="@drawable/add_car_icon" />

                <Button
                    android:id="@+id/addcar_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/join_btn_background"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/addcar"
                    android:textColor="#072147"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_bookcar"
            android:layout_width="205dp"
            android:layout_height="213dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#9FC6BD"
            app:layout_column="0"
            app:layout_row="1" >

            <LinearLayout
                android:id="@+id/bookcar_vlayout"
                android:layout_width="192dp"
                android:layout_height="207dp"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginBottom="25dp"
                    app:srcCompat="@drawable/ask_car_icon" />

                <Button
                    android:id="@+id/askcar_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/join_btn_background"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/bookcar"
                    android:textColor="#072147"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_carrepair"
            android:layout_width="197dp"
            android:layout_height="213dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTintMode="#9BCACA"
            app:cardBackgroundColor="#9BCACA"
            app:layout_column="1"
            app:layout_row="1" >

            <LinearLayout
                android:id="@+id/carrepair_vlayout"
                android:layout_width="185dp"
                android:layout_height="213dp"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/carrepair_icon"
                    android:layout_width="192dp"
                    android:layout_height="96dp"
                    android:layout_marginBottom="25dp"
                    app:srcCompat="@drawable/car_repair_icon" />

                <Button
                    android:id="@+id/carrepair_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/join_btn_background"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/repaircar"
                    android:textColor="#072147"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/car_txt"
        android:layout_width="178dp"
        android:layout_height="128dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/almendra_sc"
        android:text="@string/car"
        android:textColor="@color/white"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/for_txt"
        android:layout_width="155dp"
        android:layout_height="108dp"
        android:layout_marginTop="188dp"
        android:fontFamily="@font/almendra_sc"
        android:text="@string/fortxt"
        android:textColor="@color/white"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/all_txt"
        android:layout_width="150dp"
        android:layout_height="121dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/almendra_sc"
        android:text="@string/all"
        android:textColor="@color/white"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/carlogo_icon"
        android:layout_width="182dp"
        android:layout_height="123dp"
        android:layout_marginTop="96dp"
        android:contentDescription="icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/car5" />

</androidx.constraintlayout.widget.ConstraintLayout>